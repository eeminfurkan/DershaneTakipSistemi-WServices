@model DershaneTakipSistemi.Models.Sinif

@{
    ViewData["Title"] = "Sınıf Bilgilerini Düzenle";
}

<h1>@ViewData["Title"]</h1>

<h4>Sınıf Bilgileri</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @* Views/Siniflar/Create.cshtml veya Edit.cshtml içinde *@
            <div class="form-group mb-3">
                <label asp-for="OgretmenPersonelId" class="control-label"></label>
                <select asp-for="OgretmenPersonelId" class="form-control" asp-items="ViewBag.OgretmenPersonelId">
                    <option value="">-- Öğretmen Seçiniz --</option> @* Boş seçenek *@
                </select>
                <span asp-validation-for="OgretmenPersonelId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>



            <div class="form-group mt-4">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
