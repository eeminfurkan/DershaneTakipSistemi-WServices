@model DershaneTakipSistemi.Models.Sinif

@{
    ViewData["Title"] = "Sınıf Bilgilerini Düzenle";
}

<h1>@ViewData["Title"]</h1>

<h4>Sınıf Bilgileri</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Ad" class="form-label">Sınıf Adı</label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="OgretmenPersonelId" class="form-label">Sorumlu Öğretmen</label>
                <select asp-for="OgretmenPersonelId" class="form-select" asp-items="ViewBag.OgretmenPersonelId">
                    <option value="">-- Öğretmen Seçiniz --</option>
                </select>
                <span asp-validation-for="OgretmenPersonelId" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
