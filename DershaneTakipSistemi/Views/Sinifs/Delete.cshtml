@model DershaneTakipSistemi.Models.Sinif

@{
    ViewData["Title"] = "Sınıf Sil";
}

<h1>@ViewData["Title"]</h1>

<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

<h3>Bu sınıfı silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>Silinecek Sınıf Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ad)
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary ms-2">Listeye Geri Dön</a>
    </form>
</div>

