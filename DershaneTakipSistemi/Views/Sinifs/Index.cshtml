@model IEnumerable<DershaneTakipSistemi.Models.Sinif>

@{
    ViewData["Title"] = "Sınıflar";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Yeni Sınıf Ekle</a>
</p>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Ad)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().SorumluOgretmen) @* Yeni Başlık *@
            </th>
            <th>Öğrenci Sayısı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>

                <td>
                    @* Sorumlu öğretmen null olabilir, bu yüzden null kontrolü önemli *@
                    @(item.SorumluOgretmen != null ? item.SorumluOgretmen.AdSoyad : "Atanmamış")
                </td>
                <td>
                    @item.Ogrenciler?.Count
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
