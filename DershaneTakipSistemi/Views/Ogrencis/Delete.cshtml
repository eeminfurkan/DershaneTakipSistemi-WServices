@model DershaneTakipSistemi.Models.Ogrenci

@{
    ViewData["Title"] = "Öğrenci Sil";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-danger mt-4">
    <h5>Bu öğrenciyi kalıcı olarak silmek istediğinizden emin misiniz?</h5>
    <p>Bu işlem geri alınamaz.</p>
</div>

<div>
    <h4>Silinecek Öğrenci Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Ad)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Ad)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Soyad)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Soyad)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.CepTelefonu)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CepTelefonu)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Sinifi)
        </dt>
        <dd class="col-sm-9">
            @(Model.Sinifi?.Ad ?? "Atanmamış")
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.AktifMi)
        </dt>
        <dd class="col-sm-9">
            @if (Model.AktifMi)
            {
                <span class="badge bg-success">Aktif</span>
            }
            else
            {
                <span class="badge bg-danger">Pasif</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-4">
        <!-- Silinecek öğrencinin ID'si form ile birlikte gizli olarak gönderilir -->
        <input type="hidden" asp-for="Id" />

        <!-- Silme işlemi için tehlikeyi belirten kırmızı buton -->
        <button type="submit" class="btn btn-danger">Evet, Sil</button>

        <!-- Vazgeçme işlemi için ikincil buton -->
        <a asp-action="Index" class="btn btn-secondary">İptal Et ve Listeye Dön</a>
    </form>
</div>
