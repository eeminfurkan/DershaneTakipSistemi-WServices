@model DershaneTakipSistemi.Models.Personel

@{
    ViewData["Title"] = "Yeni Personel Oluştur";
}

<h1>@ViewData["Title"]</h1>

<h4>Personel Bilgileri</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Ad" class="form-label"></label>
                    <input asp-for="Ad" class="form-control" />
                    <span asp-validation-for="Ad" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Soyad" class="form-label"></label>
                    <input asp-for="Soyad" class="form-control" />
                    <span asp-validation-for="Soyad" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Gorevi" class="form-label"></label>
                    <input asp-for="Gorevi" class="form-control" />
                    <span asp-validation-for="Gorevi" class="text-danger"></span>
                </div>
                <div class="col-md-6 d-flex align-items-end pb-3">
                    <div class="form-check">
                        <!-- Yeni personel varsayılan olarak aktif gelir. -->
                        <input class="form-check-input" type="checkbox" asp-for="AktifMi" checked />
                        <label class="form-check-label" asp-for="AktifMi"></label>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Oluştur</button>
                <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
